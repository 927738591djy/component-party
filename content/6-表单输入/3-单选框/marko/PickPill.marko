<let/picked = "red"/>
<const/handleChange(event) {
  picked = event.target.value;
}/>

<div>你选择了: ${picked}</div>
<input#blue-pill
  type="radio"
  checked=picked === "blue"
  value="blue"
  onChange=handleChange
/>
<label for="blue-pill">蓝色</label>

<input#red-pill
  type="radio"
  checked=picked === "red"
  value="red"
  onChange=handleChange
/>
<label for="red-pill">红色</label>
